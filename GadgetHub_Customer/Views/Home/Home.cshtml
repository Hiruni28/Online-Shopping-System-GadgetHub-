
@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: Arial, sans-serif;
        }

        .hero-section {
            background-image: url('https://shipsy.io/wp-content/uploads/2021/05/Blog-119-2.jpg'); /* Replace with your image */
            background-size: cover;
            background-position: center;
            color: white;
            padding: 60px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 40px;
                font-weight: bold;
            }

            .hero-section p {
                font-size: 18px;
                margin-top: 20px;
            }

        .section-title {
            font-size: 32px;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 30px;
        }

        .about-section {
            background-color: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
        }

            .about-section h3 {
                font-size: 28px;
                font-weight: bold;
                color: #333;
            }

            .about-section p {
                font-size: 16px;
                color: #555;
                line-height: 1.6;
            }
    </style>
</head>
<body>


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <!-- Hero Section -->
    <div class="hero-section">
        <h1 style="color:darkred;">Welcome to The Gadget Hub</h1>
        <p style="color:black;">Revolutionize the way you shop for gadgets — smart, fast, and powered by intelligent supply chain technology.</p>
    </div>


    <!-- About SPC Section -->
    <div class="container about-section">
        <h3 class="section-title text-center">About The Gadget Hub</h3>
        <p>
            <span class="highlight">The Gadget Hub</span> is an innovative e-commerce platform that specializes in offering the latest and trendiest electronic gadgets to tech-savvy consumers.
            Unlike traditional sellers, Gadget Hub operates without a physical inventory, relying instead on strategic partnerships with trusted distributors.
        </p>
        <p>
            When a customer places an order, the system automatically requests quotations from three major distributors: <strong>TechWorld</strong>, <strong>ElectroCom</strong>, and <strong>Gadget Central</strong>.
            It then compares pricing, stock availability, and delivery times to select the best option for each item — ensuring fast delivery and cost-efficiency.
        </p>
        <p>
            Gadget Hub brings together technology, transparency, and smart logistics to deliver exceptional customer experiences.
            With automated order processing and distributor selection, it ensures buyers always get the best deal without compromising on quality or service.
        </p>
    </div>

    <!-- Call-to-Action Section (Optional) -->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

