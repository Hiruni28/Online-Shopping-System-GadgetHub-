@model IEnumerable<GadgetHub_Server.Models.Orders>

@{
    ViewBag.Title = "GetOrder";
}

<div class="container my-4">
    <h2 class="text-center text-success mb-4">
        <i class="fas fa-clipboard-list"></i> Order List
    </h2>

    <div class="mb-3 text-end">
        @Html.ActionLink("Create New Order", "AddOrder", null, new { @class = "btn btn-primary" })
    </div>

    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().OrderID)</th>
                <th>@Html.DisplayNameFor(model => model.First().CustomerName)</th>
                <th>@Html.DisplayNameFor(model => model.First().ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderID)</td>
                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        @Html.ActionLink("Update", "UpdateOrder", new { id = item.OrderID }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Delete", "DeleteOrder", new { id = item.OrderID }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


