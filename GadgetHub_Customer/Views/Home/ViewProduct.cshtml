@model IEnumerable<GadgetHub_Server.Models.Products>

@{
    ViewBag.Title = "ViewProduct";
}

<h2 class="text-center text-primary my-4">
    <i class="fas fa-boxes"></i> Product List
</h2>

<table class="table table-striped table-bordered">
    <thead class="bg-info text-white">
        <tr>
            <th>Product Name</th>
            <th>Product Brand</th>
            <th>Product Detail</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>Rs.@Html.DisplayFor(modelItem => item.ProductBrand)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductDetail)</td>
                <td class="text-center">
                    <a href="@Url.Action("UpdateDrugs", new { id = item.ProductId })" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="@Url.Action("DeleteDrugs", new { id = item.ProductId })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this drug?');">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
