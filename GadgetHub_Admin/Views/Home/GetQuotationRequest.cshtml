@model IEnumerable<GadgetHub_Server.Models.QuotationRequests>

@{
    ViewBag.Title = "GetQuotationRequest";
}

<h2 class="text-center my-4">Get Quotation Requests</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuotationRequestID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistributorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuotationPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuotationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuotationRequestID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DistributorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuotationPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuotationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="text-center">
                    <div class="btn-group">
                        @using (Html.BeginForm("ConfirmQuotationRequest", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.QuotationRequestID)
                            <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Confirm the Quotation Request?');">
                                <i class="fas fa-check-circle"></i> Confirm
                            </button>
                        }
                        @using (Html.BeginForm("CancelQuotationRequest", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.QuotationRequestID)
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Cancel the Quotation Request?');">
                                <i class="fas fa-times-circle"></i> Cancel
                            </button>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap JS for table interactivity -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
