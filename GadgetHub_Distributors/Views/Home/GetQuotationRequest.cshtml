@model IEnumerable<GadgetHub_Server.Models.QuotationRequests>

@{
    ViewBag.Title = "GetQuotationRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center text-primary my-4">
    <i class="fas fa-file-signature"></i> Quotation Requests
</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().QuotationRequestID)</th>
                <th>@Html.DisplayNameFor(model => model.First().DistributorName)</th>
                <th>@Html.DisplayNameFor(model => model.First().QuotationPrice)</th>
                <th>@Html.DisplayNameFor(model => model.First().QuotationDate)</th>
                <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.QuotationRequestID)</td>
                    <td>@Html.DisplayFor(modelItem => item.DistributorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuotationPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuotationDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td class="text-center">
                        @Html.ActionLink("Update", "UpdateQuotationRequest", new { id = item.QuotationRequestID }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Delete", "DeleteQuotationRequest", new { id = item.QuotationRequestID }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to delete this product?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
