@model GadgetHub_Server.Models.Quotations

@{
    ViewBag.Title = "UpdateQuotation";
}

<h2 class="text-center text-primary my-4">
    <i class="fas fa-edit"></i> Update Quotation
</h2>

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show container" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.QuotationID, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.QuotationID, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Quotation ID" } })
                @Html.ValidationMessageFor(m => m.QuotationID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.productName, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.productName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Product Name" } })
                @Html.ValidationMessageFor(m => m.productName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Price" } })
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mb-4">
            @Html.LabelFor(m => m.Quantity, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Quantity, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Quantity" } })
                @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fas fa-save"></i> Save
                </button>
                @Html.ActionLink("Back to List", "GetQuotations", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<!-- Bootstrap JS (for alert dismiss) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
